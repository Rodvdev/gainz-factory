// Testimonios y avances (Wall of Gainz)
model Testimonial {
  id              String   @id @default(cuid())
  
  // Informaci√≥n del usuario
  userName        String
  userImage       String?
  userLocation    String?
  
  // Contenido del testimonio
  title           String
  content         String
  beforeImage     String?
